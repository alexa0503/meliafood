{% extends 'AppBundle:admin:layout.html.twig' %}
{% block content %}
<div class="panel panel-default">
  <div class="panel-heading">
    <!--<div class="panel-btns">
      <a class="panel-close" href="">×</a>
      <a class="minimize" href="">−</a>
    </div>--><!-- panel-btns -->
    <h3 class="panel-title">会员信息</h3></p>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <!--<div id="table2_wrapper" class="dataTables_wrapper no-footer">
      <div class="dataTables_length" id="table2_length"></div>
      <div id="table2_filter" class="dataTables_filter"><label>Search:<input type="search" class="" placeholder="" aria-controls="table2"></label></div>-->
      <table id="table2" class="table table-striped dataTable no-footer" role="grid" aria-describedby="table2_info">
      <thead>
       <tr role="row">
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 164px;">ID</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 253px;">Open ID</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 232px;">集享卡ID</th>
        <th tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;">创建时间</th>
        <th ctabindex="0" aria-controls="table2" rowspan="1" colspan="1">创建IP</th>
      </tr>
     </thead>
     <tbody>
     {% for member in pagination %}
      <tr class="gradeA {% if loop.index is odd %} odd{% else %} even{% endif %}" role="row">
        <td>{{ member.id }}</td>
        <td>{{ member.openID }}</td>
        <td>{{ member.maxxipointId }}</td>
        <td>{{ member.createTime | date("Y-m-d H:i:s") }}</td>
        <td>{{ member.createIp }}</td>
      </tr>
      {% endfor %}
      </tbody>
    </table>
<div class="dataTables_info" id="table2_info" role="status" aria-live="polite">共{{ pagination.getTotalItemCount }}条记录</div>
<div class="dataTables_paginate paging_full_numbers" id="table2_paginate">
{{ knp_pagination_render(pagination) }}
</div>
</div>
</div><!-- table-responsive -->

</div><!-- panel-body -->
</div>
{% endblock %}
{% block title %}会员管理{% endblock %}
{% block javascripts %}
{{ parent() }}
{% endblock %}